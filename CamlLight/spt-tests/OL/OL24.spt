(* Type ratio defined. *)

let add_ratio (r1 : ratio) (r2 : ratio) =
  match r1 with
  | { num = r1n; denom = r1d} ->
  match r2 with
  | { num = r2n; denom = r2d} ->
  {num = r1n * r2d + r2n * r1d;
   denom = r1d * r2d};;
